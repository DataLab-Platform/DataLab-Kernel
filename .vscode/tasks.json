{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üßΩüî¶ Ruff",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "ruff",
                "format",
                "datalab_kernel",
                ";",
                "${command:python.interpreterPath}",
                "-m",
                "ruff",
                "check",
                "--fix",
                "datalab_kernel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "üöÄ Pytest",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pytest",
                "--live",
                "--start-datalab",
                "datalab_kernel/tests/",
                "-v",
                "--ff"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "üìä Coverage",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pytest",
                "datalab_kernel/tests/",
                "--cov=datalab_kernel",
                "--cov-report=term-missing",
                "--cov-report=html"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "üîß Install Kernel",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "datalab_kernel",
                "install",
                "--user"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "üóëÔ∏è Uninstall Kernel",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "datalab_kernel",
                "uninstall",
                "--user"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        }
    ]
}
